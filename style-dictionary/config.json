{
  "source": ["./style-dictionary/tokens/**/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "css",
      "buildPath": "./src/styles/",
      "prefix": "token",
      "files": [{
        "destination": "variables.css",
        "format": "css/variables"
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "./src/styles/",
      "files": [{
        "destination": "variables.js",
        "format": "javascript/es6"
      }]
    }
  }
}